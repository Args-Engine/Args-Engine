#version 450
#state CULL OFF

generate(vertex, fragment)

#include <stdio.shinc>

shader(vertex)
{
    void main(void)
    {
        gl_Position = ModelToScreenSpacePosition(position);
    }
}

shader(fragment)
{
    out vec4 fragment_color;

    void main(void)
    {
        fragment_color = vec4(1.0, 0.0, 1.0, 1.0);
    }
}
