#version 450
#state CULL OFF
#state DEPTH OFF

generate(vertex, fragment)

#include<stdio.shinc>

shader(vertex)
{
    void main(void)
    {
        gl_Position = vec4(stdin(position), 1.0);
        PropagateStdIO();
    }
}

shader(fragment)
{
    uniform vec2 scale;
    void main(void)
    {
        fragment_color = vec4(SceneColor(stdin(uv)/scale).rgb, 1.0);
    }
}
