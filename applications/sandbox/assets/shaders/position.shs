#version 450

generate(vertex, fragment)

#include <stdio.shinc>

shader(vertex)
{
    void main(void)
    {
        gl_Position = ModelToScreenSpacePosition(position);
        PropagateStdIO();
    }
}

shader(fragment)
{
    void main(void)
    {
        fragment_color = vec4(stdin(position), 1);
    }
}
