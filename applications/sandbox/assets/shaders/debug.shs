#version 450

generate(vertex, fragment)

#include <stdio.shinc>

io IO
{
    vec4 color;
} sharedData;

shader(vertex)
{
    in vec4 color;

    void main(void)
    {
        gl_Position = WorldToScreenSpacePosition(position);
        sharedData.color = color;
    }
}

shader(fragment)
{
    out vec4 fragment_color;

    void main(void)
    {
        fragment_color = sharedData.color;
    }
}
